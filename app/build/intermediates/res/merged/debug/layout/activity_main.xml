<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="up or down?" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="17dp"
        android:maxHeight="250dp"
        android:ems="10" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:gravity="left"
        android:id="@+id/origin_x" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/origin_x"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/origin_y" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/origin_y"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:id="@+id/origin_z" />

    <TextView
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/origin_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/x" />

    <TextView
        android:text="y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/origin_y"
        android:layout_centerHorizontal="true"
        android:id="@+id/y" />

    <TextView
        android:text="z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/origin_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/z" />



    <TextView
        android:text="t_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_z"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/origin_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:id="@+id/trans_z"
        android:layout_below="@+id/t_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="t_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t_z"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/t_x" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/t_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/trans_x" />

    <TextView
        android:text="t_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t_z"
        android:layout_centerHorizontal="true"
        android:id="@+id/t_y" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/t_y"
        android:layout_centerHorizontal="true"
        android:id="@+id/trans_y" />

    <Button
        android:text="开始"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnstart"
        android:onClick="btnstart"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/trans_y" />

</RelativeLayout>